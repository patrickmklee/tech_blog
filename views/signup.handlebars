<div class="container mt-2">
    <a href="/login">Already have an account?</a>
    <form id="signup-form" class="form">
        <legend>Sign Up for an account</legend>    
        <div class="form-group form-group-control">
            <label class='form-label' for="username-signup">Username</label>
            <input class="form-control form-control-lg" type="text" id="username-signup" name="username-signup" placeholder="Username">
        </div>
        <br />
        <div class="form-group form-group-control">
            <label class='form-label' for="password-signup">Email</label>
            <input class="form-control form-control-lg" type="email" id="email-signup" name="email-signup" placeholder="Email Address">
        </div>
        <br />
        <div class="form-group form-group-control">
            <label class='form-label' for="password-signup">Password</label>
            <input class="form-control form-control-lg" type="password" id="password-signup" name="password-signup" placeholder="Password">
        </div>
        <br />
        <div class="form-group form-group-control">
            <button type="submit" class="btn btn-primary">Create Account</button>
        </div>
    </form>

</div>
<script src="/javascript/signup.js"></script>